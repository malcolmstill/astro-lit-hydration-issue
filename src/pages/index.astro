---
import { A } from "../components/a.ts";
import { C } from "../components/c.ts";
const items = ["A", "B", "C"];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <div class="variant">
      <p>Component A (client:load)</p>
      <A items={items} client:load />
    </div>
    <div class="variant">
      <p>Component A (client:only)</p>
      <A items={items} client:only />
    </div>
    <div class="variant">
      <p>Component C (client:load)</p>
      <C items={items} client:load />
    </div>
    <div class="variant">
      <p>Component C (client:only)</p>
      <C items={items} client:only />
    </div>

    <style>
      body {
        display: flex;
        gap: 1ch;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }

      .variant {
        border-radius: 10px;
        border: 1px solid black;
        width: fit-content;
        padding: 1ch;
      }
    </style>
  </body>
</html>
